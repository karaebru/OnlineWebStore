@model IEnumerable<OrderListModel>
@{
    ViewData["Title"] = "Get Orders";
}

<h1>Orders</h1>
@if (Model.Count() > 0 && Model.FirstOrDefault().OrderItems != null)
{
    <table class="table table-hover">
        <thead>
            <tr>
                <th scope="col">Image</th>
                <th scope="col">Price</th>
                <th scope="col">Quantity</th>
            </tr>
        </thead>
        <tbody>


            @foreach (var item in Model.FirstOrDefault().OrderItems)
            {
                <tr>
                    <th><img src="@item.ImageUrl" /></th>
                    <td>@item.Price</td>
                    <td>@item.Quantity</td>
                </tr>
            }
        </tbody>
    </table>

}
else
	{
<div class="alert alert-warning" role="alert">
   Sipariş Vermediniz!
</div>
	}